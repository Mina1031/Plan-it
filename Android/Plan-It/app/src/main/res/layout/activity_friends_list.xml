<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.plan_it.mobile.plan_it.FriendsListActivity">
        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_refresh_layout_friend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/friends_list_view"
                android:paddingBottom="100dp"
                android:clipToPadding="false"></ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/event_list_add_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="navAddFriend"
        android:src="@drawable/ic_add_circle_blue_24dp"
        />
</RelativeLayout>
