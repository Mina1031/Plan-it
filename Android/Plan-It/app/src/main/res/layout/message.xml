<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/txt_message_layout"
    android:background="@drawable/txt_message_received">
<TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="gone"
    android:id="@+id/txt_message_user_id"/>
<ImageView
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_weight=".20"
    android:id="@+id/img_message_user"
    android:src="@drawable/ic_account_circle_blue_24dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".80"
        android:orientation="vertical"
        android:layout_gravity="left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_message_user"
            android:text="@string/user_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_message_received"
            android:text="@string/title_activity_messages"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_message_time_stamp"
            android:text="@string/time"
            android:gravity="right"/>
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight=".20"
        android:id="@+id/img_message_user_right"
        android:visibility="gone"
        android:src="@drawable/ic_account_circle_blue_24dp"/>

</LinearLayout>
